<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".natives.NativeAdUnifiedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/ll_placement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/notice_win_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="NoticeWin"
                android:textSize="12sp" />

            <Button
                android:id="@+id/notice_loss_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="NoticeLoss"
                android:textSize="12sp" />

        </LinearLayout>


        <Button
            android:id="@+id/cleanLog_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:onClick="buttonClick"
            android:text="clean Log" />

        <FrameLayout
            android:id="@+id/native_ad_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/logView"
            android:layout_width="match_parent"
            android:layout_height="1200dp"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:ems="10"
            android:gravity="top|start"
            android:lineSpacingExtra="8sp"
            android:singleLine="false"
            android:textSize="14sp" />

        <!--        <View-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="1200dp"-->
        <!--            android:layout_margin="10dp"-->
        <!--            android:background="@android:color/transparent" />-->

    </LinearLayout>

</ScrollView>