<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".natives.NativeAdUnifiedFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <Button
            android:id="@+id/load_all_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:text="一键加载"
            android:textSize="12sp" />
        <LinearLayout
            android:id="@+id/ll_placement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/notice_win_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="NoticeWin"
                android:textSize="12sp" />

            <Button
                android:id="@+id/notice_loss_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="NoticeLoss"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宽："/>
            <TextView
                android:id="@+id/widget_width_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100">
            </TextView>

            <SeekBar
                android:id="@+id/widget_width"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:progress="100"
                android:max="300"
                android:layout_height="wrap_content">
            </SeekBar>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高："/>
            <TextView
                android:id="@+id/widget_height_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "100"
                >
            </TextView>
            <SeekBar
                android:id="@+id/widget_height"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:progress="100"
                android:max="300"
                android:layout_height="wrap_content">

            </SeekBar>

        </LinearLayout>
        <Button
            android:id="@+id/widget_size_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:text="更新组件大小"
            android:textSize="12sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/native_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="showView"
                android:textSize="12sp" />

            <Button
                android:id="@+id/native_hide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="hideView"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/cleanLog_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="clean Log" />

        <FrameLayout
            android:id="@+id/native_ad_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/logView"
            android:layout_width="match_parent"
            android:layout_height="1200dp"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:ems="10"
            android:gravity="top|start"
            android:lineSpacingExtra="8sp"
            android:singleLine="false"
            android:textSize="14sp" />

        <!--        <View-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="1200dp"-->
        <!--            android:layout_margin="10dp"-->
        <!--            android:background="@android:color/transparent" />-->

    </LinearLayout>

</ScrollView>