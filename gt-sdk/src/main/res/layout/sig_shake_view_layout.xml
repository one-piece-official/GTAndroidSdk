<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/sig_shake_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/sig_shake_layout_background">

        <ImageView
            android:id="@+id/sig_shakeImageView"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/sig_image_shake" />
    </RelativeLayout>

    <TextView
        android:id="@+id/sig_shakeTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sig_shake_view"
        android:layout_centerHorizontal="true"
        android:text="摇动手机"
        android:textColor="#ffffff"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/sig_shakeDescView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sig_shakeTitleView"
        android:layout_centerHorizontal="true"
        android:text="摇一摇，跳转至详情页"
        android:textColor="#ffffff"
        android:textSize="16dp" />
</RelativeLayout>